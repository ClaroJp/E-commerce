<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Quick Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  <link rel="stylesheet" href="../styles/style.css" />
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="padding: 4px 0;">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand fw-bold fs-3" href="/" style="color: #28a745 !important;">QUICK CART</a>

      <div class="d-flex align-items-center" id="userSection">
        <!-- User dropdown or Sign In will be rendered here -->
        <a class="nav-link text-light" href="/cart"><i class="bi bi-cart4 fs-5"></i></a>
      </div>
    </div>
  </nav>

      <!-- Auth + Cart -->
      <div class="d-flex align-items-center">
        <a class="nav-link me-3 text-light fs-6" href="/login">Sign in</a>
        <a class="nav-link" href="/login"><i class="bi bi-cart4 fs-5 text-light"></i></a>
      </div>
    </div>
  </nav>

  <!-- Categories -->
  <div class="row mt-5" id="categories-container">
    <!-- Categories will be dynamically loaded here -->
  </div>

  <div class="row mt-5">
    <div class="col-12 text-center mb-4">
      <h2 id="hot-sales">Hot Sales</h2>
    </div>
    <div id="hot-sales-container" class="row">
      <!-- Hot Sale products will be dynamically inserted here -->
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12 text-center mb-4">
      <h2 id="featured">Featured Products</h2>
      <div class="row" id="products-container">
        <!-- Products will be loaded dynamically here by homePage.js -->
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="../scripts/logout.js"></script>
  <script src="../scripts/homePage.js"></script>
  <script src="../scripts/categories.js"></script>
  <script src="../scripts/search.js"></script>
  <script src="../scripts/navbar.js"></script>
</body>

</html>
